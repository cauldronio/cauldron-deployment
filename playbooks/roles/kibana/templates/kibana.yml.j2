# Description:
# Default Kibana configuration from kibana-docker.

server.name: kibana
server.host: "0"
server.basePath: "{{KIBANA_URL_PATH}}"
server.rewriteBasePath: true

elasticsearch.hosts: https://{{ ELASTIC_HOST }}:{{ ELASTIC_PORT }}
elasticsearch.ssl.verificationMode: none
#elasticsearch.ssl.certificateAuthorities: ["/usr/share/kibana/config/root-ca.pem"]
elasticsearch.username: kibanaserver
elasticsearch.password: {{ELASTIC_KIBANASERVER_PASSWORD}}
elasticsearch.requestHeadersWhitelist: ["securitytenant","Authorization"]

server.ssl.enabled: false
#server.ssl.certificate:  /usr/share/kibana/config/kibana.pem
#server.ssl.key:  /usr/share/kibana/config/kibana-key.pem
#server.ssl.keyPassphrase: ""

opendistro_security.multitenancy.enabled: true
opendistro_security.multitenancy.tenants.enable_private: false
opendistro_security.multitenancy.tenants.preferred: ["Global"]
opendistro_security.readonly_mode.roles: ["kibana_read_only"]

# opendistro_security.cookie.secure: true
# opendistro_security.cookie.password:

opendistro_security.auth.type: "jwt"
opendistro_security.jwt.url_param: jwtToken

newsfeed.enabled: false
telemetry.optIn: false
telemetry.enabled: false
security.showInsecureClusterWarning: false
map.includeElasticMapsService: false
