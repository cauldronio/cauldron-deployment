---
# This is the internal user database
# The hash value is a bcrypt hash and can be generated with plugin/tools/hash.sh

_meta:
  type: "internalusers"
  config_version: 2

# Define your internal users here

admin:
  hash: {{ hash_ELASTIC_ADMIN_PASSWORD}}
  reserved: true
  backend_roles:
  - "admin"
  description: "Demo admin user"

kibanaserver:
  hash: {{ hash_ELASTIC_KIBANASERVER_PASSWORD }}
  reserved: true
  description: "Demo kibanaserver user"

kibanaro:
  hash: {{ hash_ELASTIC_KIBANARO_PASSWORD }}
  reserved: false
  backend_roles:
  - "kibanauser"
  - "readall"
  description: "Demo kibanaro user"

logstash:
  hash: {{ hash_ELASTIC_LOGSTASH_PASSWORD }}
  reserved: false
  backend_roles:
  - "logstash"
  description: "Demo logstash user"

readall:
  hash: {{ hash_ELASTIC_READALL_PASSWORD }}
  reserved: false
  backend_roles:
  - "readall"
  description: "Demo readall user"

snapshotrestore:
  hash: {{ hash_ELASTIC_SNAPSHOTRESTORE_PASSWORD }}
  reserved: false
  backend_roles:
  - "snapshotrestore"
  description: "Demo snapshotrestore user"
